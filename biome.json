{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules/**", "generated/**", "packages/client/dist/**", "packages/client/project/**"],
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off",
				"noUnusedTemplateLiteral": "off",
				"useDefaultParameterLast": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noConfusingVoidType": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"correctness": {
				"noUnnecessaryContinue": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": ["node_modules/**", "generated/**", "packages/client/dist/**", "packages/client/project/**"],
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 320
	}
}
